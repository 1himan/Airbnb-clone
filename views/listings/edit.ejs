<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form
      action="/listings/<%=listing._id%>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          required
          name="listing[title]"
          type="text"
          value="<%= listing.title %>"
          class="form-control" />
        <div class="invalid-feedback">Enter a valid Title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          type="text"
          name="listing[description]"
          class="form-control">
            <%=listing.description%>
           </textarea
        >
        <div class="invalid-feedback">Enter a valid Description</div>
      </div>
      <!-- to display image  -->
      <div class="mb-3">
        Original Listing Image <br />
        <img src="<%= originalUrl %>" alt="" />
      </div>
      <!-- to Upload new image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price </label>
          <input
            required
            type="number"
            name="listing[price]"
            placeholder="enter price"
            value="<%= listing.price  %>"
            class="form-control" />
          <div class="invalid-feedback">Enter a valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            required
            type="text"
            name="listing[country]"
            placeholder="enter country"
            class="form-control"
            value="<%= listing.country  %>" />
          <div class="invalid-feedback">Enter a valid Country</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          required
          type="text"
          name="listing[location]"
          placeholder="enter location"
          class="form-control"
          value="<%= listing.location  %>" />
        <div class="invalid-feedback">Enter a valid Location</div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Done</button>
    </form>
  </div>
</div>
